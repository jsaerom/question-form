{{#if addQuestion}}
  <form {{action 'save' on="submit"}}>
    <div class="form-group">
      <label for="title">Question</label>
      {{input value=title type="text" id="title" required="required"}}
    </div>
    <div class="form-group">
      <label for="details">Additional Details</label>
      {{textarea value=details type="text" id="details" required="required"}}
    </div>
    <div class="form-group">
      <label for="author">Your Name</label>
      {{input value=author type="text" id="author"}}
    </div>
    <button>Ask!</button>
  </form>
{{else}}
  <button {{action 'displayForm'}}>Add Question</button>
{{/if}}
