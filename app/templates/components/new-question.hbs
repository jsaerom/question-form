{{#if addQuestion}}
  <form>
    <div class="form-group">
      <label for="question">Question</label>
      {{input value=question type="text" id="question"}}
    </div>
    <div class="form-group">
      <label for="details">Additional Details</label>
      {{textarea value=details type="text" id="details"}}
    </div>
    <div class="form-group">
      <label for="author">Your Name</label>
      {{input value=author type="text" id="author"}}
    </div>
    <button {{action 'save'}}>Ask!</button>
  </form>
{{else}}
  <button {{action 'displayForm'}}>Add Question</button>
{{/if}}
