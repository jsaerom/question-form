{{#if editQuestion}}
  <form>
    <div class="form-group">
      <label for="title">Question</label>
      {{input value=title type="text" placeholder=question.title}}
    </div>
    <div class="form-group">
      <label for="details">Additional Details</label>
      {{textarea value=details type="text" placeholder=question.details}}
    </div>
    <div class="form-group">
      <label for="author">Your Name</label>
      {{input value=author type="text" placeholder=question.author}}
    </div>
    <button class="btn" {{action 'update' question}}>Update</button>
  </form>
{{else}}
  <button class="btn" {{action 'displayForm'}}>Edit Question</button>
{{/if}}
